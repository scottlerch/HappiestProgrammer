<div ng-controller="HomeCtrl">
    <div class="jumbotron">
        <div class="container">
            <h1>Happiest Programmer!</h1>
            <p>
                Happiest Programmer ranks the happiest (or grumpiest) programmers by language using sentiment analysis on
                data from StackOverflow and GitHub.
            </p>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <table>
                    <tr>
                        <td>
                            <input type="text" data-provide="datepicker" class="form-control" ng-model="rankSelection.date" id="rankDate" />
                        </td>
                        <td>
                            <select class="form-control" ng-model="rankSelection.days">
                                <option>1</option>
                                <option>5</option>
                                <option>15</option>
                                <option>30</option>
                                <option>60</option>
                                <option>90</option>
                            </select>
                        </td>
                        <td>
                            <button type="button" class="btn btn-default" ng-click="updateRankDate()">Update</button>
                        </td>
                    </tr>
                </table>
            </div>
        </div>
        <br/>
        <div class="row">
            <div class="list-group col-md-4">
                <a href="#" class="list-group-item active">
                    <h4>Rankings</h4>
                </a>
                <a href class="list-group-item" ng-repeat="language in languages" repeat-done="layoutDone()" rel="tooltip" title="{{language.Score}}" ng-click="selectLanguage(language.Name)" ng-class="{ 'selected-language': language.Name.toUpperCase() === languageSelected.name.toUpperCase() }">
                    <table class="rankings">
                        <tr>
                            <td class="rank">
                                {{language.Rank}}
                            </td>
                            <td>
                                {{language.Name}}
                            </td>
                        </tr>
                    </table>
                </a>
            </div>
            <div class="col-md-8">
                <div class="panel panel-success">
                    <div class="panel-heading">
                        <h3 class="panel-title">Positive Comments</h3>
                    </div>
                    <div class="panel-body">
                        <div class="well" ng-repeat="comment in positiveComments" repeat-done="layoutDone()">
                            <p>
                                {{comment.Text}}
                            </p>
                        </div>
                    </div>
                </div>
                <div class="panel panel-danger">
                    <div class="panel-heading">
                        <h3 class="panel-title">Negative Comments</h3>
                    </div>
                    <div class="panel-body">
                        <div class="well" ng-repeat="comment in negativeComments" repeat-done="layoutDone()">
                            <p>
                                {{comment.Text}}
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <hr />
        <footer>
            <p>© Scott Lerch 2014</p>
        </footer>
    </div>
</div>
