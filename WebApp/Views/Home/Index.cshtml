<div ng-controller="HomeCtrl">
    <div class="jumbotron">
        <div class="container">
            <h1>Happiest Programmer!</h1>
            <p>
                Happiest Programmer ranks the happiest (or grumpiest) programmers by language using sentiment analysis on
                data from StackOverflow and GitHub.
            </p>
        </div>
    </div>
    <div class="container">
        <p>
            <table>
                <tr>
                    <td>
                        <input type="text" data-provide="datepicker" class="form-control" ng-model="rankSelection.date" id="rankDate" />
                    </td>
                    <td>
                        <button type="button" class="btn btn-default" ng-click="updateRankDate()">Update</button>
                    </td>
                </tr>
            </table>
        </p>
        <div class="row">
            <div class="list-group col-md-4">
                <a href="#" class="list-group-item active">
                    <h4>Rankings</h4>
                </a>
                <a href class="list-group-item" ng-repeat="language in languages" repeat-done="layoutDone()" rel="tooltip" title="{{language.Score}}" ng-click="selectLanguage(language.Name)">
                    <table class="rankings">
                        <tr>
                            <td class="rank">
                                {{language.Rank}}
                            </td>
                            <td>
                                {{language.Name}}
                            </td>
                        </tr>
                    </table>
                </a>
            </div>
            <div class="col-md-8">
                <div class="well" ng-repeat="comment in positiveComments" repeat-done="layoutDone()">
                    <p>
                        {{comment.Text}}
                    </p>
                </div>
            </div>
        </div>
        <hr />
        <footer>
            <p>© Scott Lerch 2014</p>
        </footer>
    </div>
</div>
